				<property name="pcmsIntegrationManager">
					<ref local="pcmsIntegrationManager" />
					</property>
				<property name="ldapUtils">
					<ref local="ldapUtils" />
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="teamManager" parent="txProxyTemplate"> 
		<property name="target">
			<bean class="com.st.ict.qs.notice.manager.impl.TeamManagerImpl">
				
				<property name="teamDAO">
