				</property>
				
			</bean>
		</property>
	</bean>
	
	<bean id="plmIntegrationManager" parent="esicom2txProxyTemplate">
		<property name="target">
			<bean class="com.st.ict.qs.notice.integration.impl.PlmIntegrationManagerImpl">
